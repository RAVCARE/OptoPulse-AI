<!DOCTYPE html>
<html>
    <!-- Add this little linker into all the code -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../public/stylesheets/stylesheet.css">

    <!-- This is dashboard specific -->
    <link rel="stylesheet" href="../public/dashboard/dashboard.css">
    <body>
        <!-- Will make everything in a flex container -->
        <div class="content-flex">
            <!-- This is the header -->
            <div class="header">
                <div class="header-content focused">Dashboard</div>
                <a class="header-content" href="/learn">Learning</a>
                <a class="header-content" href="/eval">Evaluation</a>
            </div>
            <div class="content">
                <!-- Delete this and replace this with the stuff you need -->
                <div class="person_side">
                    <img class="person_img" src="<%= img_url %>">
                    <h3 class="person_inf">Personal Info</h3>
                    <div class="info">
                        <!-- Separate into name, info -->
                        <div>
                            <div class="name">Name</div>
                            <div class="info"><%= name %></div>
                        </div>
                        <div>
                            <div class="name">Email</div>
                            <div class="info"><%= email %></div>
                        </div>
                        <div>
                            <div class="name">Provider</div>
                            <div class="info"><%= provider %></div>
                        </div>
                    </div>
                </div>
                <div class="history_side">
                    <h2>Patient History</h2>
                    <!-- Display list of the tasks they've done -->
                    <% for(let i = eval_completed.length - 1; i >= 0; i--) { %>
                        <div class="entry">
                            <h4>Test Completed</h4>
                            &emsp;<b>Name: </b><%= eval_completed[i].name %><br>
                            &emsp;<b>Completed On: </b><%= eval_completed[i].completed_on %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </body>
</html>